{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node", 
    "noEmit": false,
    "outDir": "./.tests-dist",
    "target": "ES2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": ["tests/**/*.ts", "tests/**/*.tsx", "src/lib/**/*.ts", "src/app/**/*.tsx"]
}
